{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Welcome to ACME Communitations</h1>
        <h2>Please fill the textbox with your phone to show your history calls:</h2>
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">{{ message }}</div>
        {% endfor %}
        <form action="{{ path('listpage') }}" method="post">
            <input type="text" name="phone" style="display:inline; width: auto" class="form-control" placeholder="eg: 677788990"/>
            <button class="btn btn-primary" type="submit">Send</button>
        </form>
    </div>
{% endblock %}
